<%- include("../partials/admin/header") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


<main class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-success">Order Details</h2>
        <p><strong>Order ID:</strong> <%= order.orderId %></p>
        <p><strong>Status:</strong> <span class="badge bg-info"><%= order.status %></span></p>
        <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
        <p><strong>Final Amount:</strong> ₹<%= order.finalAmount.toFixed(2) %></p>

        <hr>

        <h4 class="text-primary">Shipping Address</h4>
        <p><strong>Name:</strong> <%= order.address.name %></p>
        <p><strong>City:</strong> <%= order.address.city %></p>
        <p><strong>State:</strong> <%= order.address.state %></p>
        <p><strong>Pincode:</strong> <%= order.address.pincode %></p>
        <p><strong>Phone:</strong> <%= order.address.phone %></p>

        <hr>

        <h4 class="text-primary">Ordered Items</h4>
        <div class="table-responsive">
            <table class="table table-bordered mt-3">
                <thead class="table-success">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.orderedItems.forEach(item => { %>
                        <tr>
                            <td>
                                <% if (item.product.productImage && item.product.productImage.length > 0) { %>
                                    <img src="/uploads/re-image/<%= item.product.productImage[0] %>" width="60" alt="Product Image">
                                <% } else { %>
                                    <span>No Image</span>
                                <% } %>
                            </td>
                            <td><%= item.product.productName %></td>
                            <td><%= item.product.brand %></td>
                            <td>₹<%= item.price %></td>
                            <td><%= item.quantity %></td>
                            <td>₹<%= item.price * item.quantity %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="text-end mt-4">
            <a href="/admin/orders" class="btn btn-secondary">Back to Orders</a>
        </div>
    </div>
</main>

