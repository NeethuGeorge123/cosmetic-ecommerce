<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-commerce Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin-style.css" />
    <link rel="stylesheet" href="/css/brands.css" />
    <style>
      .content {
        padding: 0.5rem 1.5rem 1.5rem;
        width: 100%;
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        margin: 0;
      }

      .brands-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
      }

      .brands-heading {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #333;
        text-align: center;
      }

      .brands-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
      }

      .add-brand-form {
        background-color: #fff;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
      }

      .add-brand-form .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 1rem;
      }

      .form-group label {
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #333;
        text-align: center;
      }

      .form-group input {
        width: 100%;
        max-width: 300px;
        padding: 0.625rem;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 6px;
        box-sizing: border-box;
        margin: 0 auto;
      }

      .form-group input[type="file"] {
        padding: 0.3rem;
      }

      .error-message {
        color: #dc3545;
        font-size: 0.875rem;
        display: none;
        margin-top: 0.25rem;
        text-align: center;
      }

      .add-btn {
        background-color: #28a745;
        color: white;
        padding: 0.625rem 1.25rem;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
        display: block;
        margin: 1rem auto;
      }

      .add-btn:hover {
        background-color: #218838;
      }

      .brand-table-section {
        background-color: #fff;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        overflow-x: auto;
      }

      .brand-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9375rem;
        table-layout: auto;
      }

      .brand-table th,
      .brand-table td {
        border: 1px solid #eee;
        padding: 0.75rem;
        text-align: left;
      }

      .brand-table th {
        background-color: #f8f9fa;
        color: #333;
      }

      .brand-table tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      .brand-logo {
        max-width: 50px;
        height: auto;
      }

      .status-btn {
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.875rem;
      }

      .status-btn.green {
        background-color: #d4edda;
        color: #155724;
      }

      .status-btn.red {
        background-color: #f8d7da;
        color: #721c24;
      }

      .btn {
        padding: 0.375rem 0.75rem;
        border-radius: 5px;
        text-decoration: none;
        font-size: 0.875rem;
        display: inline-block;
        margin-right: 0.5rem;
      }

      .btn.green {
        background-color: #28a745;
        color: white;
      }

      .btn.green:hover {
        background-color: #218838;
      }

      .btn.red {
        background-color: #dc3545;
        color: white;
      }

      .btn.red:hover {
        background-color: #c82333;
      }

      .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        gap: 8px;
        flex-wrap: wrap;
      }

      .pagination-btn {
        padding: 8px 14px;
        background-color: #e0e0e0;
        border-radius: 4px;
        color: #2c4e26;
        text-decoration: none;
        border: 1px solid #ccc;
        transition: background-color 0.3s ease;
      }

      .pagination-btn:hover {
        background-color: #c2c2c2;
      }

      .pagination-btn.active {
        background-color: #2a661e;
        color: white;
        font-weight: bold;
      }

      /* Media queries for responsiveness */
      @media (max-width: 768px) {
        .content {
          padding: 0.5rem 1rem 1rem;
        }
        .brands-container {
          max-width: 100%;
        }
        .add-brand-form,
        .brand-table-section {
          max-width: 100%;
          padding: 1rem;
        }
        .add-brand-form .form-group {
          align-items: center;
        }
        .form-group input {
          max-width: 100%;
        }
        .brand-table {
          font-size: 0.875rem;
        }
        .brand-table th,
        .brand-table td {
          padding: 0.5rem;
        }
        .btn,
        .add-btn {
          padding: 0.3125rem 0.625rem;
          font-size: 0.75rem;
        }
        .pagination-btn {
          padding: 0.375rem 0.75rem;
          font-size: 0.875rem;
        }
        .error-message {
          font-size: 0.75rem;
        }
      }

      @media (max-width: 576px) {
        .brands-heading {
          font-size: 1.25rem;
        }
        .add-brand-form .form-group {
          align-items: center;
        }
        .form-group input {
          font-size: 0.875rem;
          padding: 0.5rem;
        }
        .brand-table {
          font-size: 0.75rem;
        }
        .brand-table th,
        .brand-table td {
          padding: 0.375rem;
        }
        .btn,
        .add-btn {
          padding: 0.25rem 0.5rem;
          font-size: 0.6875rem;
        }
        .pagination-btn {
          padding: 0.25rem 0.625rem;
          font-size: 0.75rem;
        }
        .brand-logo {
          max-width: 40px;
        }
        .error-message {
          font-size: 0.6875rem;
        }
      }

      @media (max-width: 320px) {
        .content {
          padding: 0.5rem;
        }
        .add-brand-form,
        .brand-table-section {
          padding: 0.75rem;
        }
        .form-group input {
          font-size: 0.75rem;
        }
        .brand-table {
          font-size: 0.6875rem;
        }
        .error-message {
          font-size: 0.625rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('../partials/admin/header') %>

    <div class="content">
      <div class="brands-container">
        <h2 class="brands-heading">Brands</h2>

        <div class="brands-content">
          <!-- Add Brand Form -->
          <div class="add-brand-form">
            <form
              action="/admin/addBrand"
              method="POST"
              enctype="multipart/form-data"
              onsubmit="return validateForm(event)"
            >
              <div class="form-group">
                <label for="brandName">Brand Name</label>
                <input type="text" id="brandName" name="name" required />
                <span class="error-message" id="name-error"></span>
              </div>

              <div class="form-group">
                <label for="brandImage">Brand Image</label>
                <input type="file" id="brandImage" name="image" required />
                <span class="error-message" id="image-error"></span>
              </div>

              <button type="submit" class="add-btn">Add Brand</button>
            </form>
          </div>

          <!-- Brands Table -->
          <div class="brand-table-section">
            <table class="brand-table">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Logo</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% data.reverse().forEach((brand, index) => { %>
                <tr>
                  <td><%= brand.brandName %></td>
                  <td>
                    <img
                      src="/Uploads/re-image/<%= brand.brandImage[0] %>"
                      alt="<%= brand.brandName %>"
                      class="brand-logo"
                    />
                  </td>
                  <td>
                    <% if (brand.isBlocked === true) { %>
                    <span class="status-btn red">Blocked</span>
                    <% } else { %>
                    <span class="status-btn green">Active</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (brand.isBlocked === false) { %>
                    <a
                      href="/admin/blockBrand?id=<%= brand._id %>"
                      class="btn red"
                      >Block</a
                    >
                    <% } else { %>
                    <a
                      href="/admin/unblockBrand?id=<%= brand._id %>"
                      class="btn green"
                      >Unblock</a
                    >
                    <% } %>
                    <a
                      href="/admin/deleteBrand?id=<%= brand._id %>"
                      class="btn red"
                      onclick="return confirmDelete()"
                      >Delete</a
                    >
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>

            <script>
              const existingBrands = <%- JSON.stringify(data.map(b => b.brandName.toLowerCase())) %>;
            </script>

            <!-- Pagination -->
            <div class="pagination">
              <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>" class="pagination-btn"
                >Previous</a
              >
              <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
              <a
                href="?page=<%= i %>"
                class="pagination-btn <%= currentPage === i ? 'active' : '' %>"
                ><%= i %></a
              >
              <% } %> <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>" class="pagination-btn"
                >Next</a
              >
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function validateForm(event) {
        event.preventDefault();
        clearErrorMessages();

        const name = document.getElementById("brandName").value;
        const image = document.getElementById("brandImage");
        let isValid = true;
        const brandLower = name.trim().toLowerCase();
        

        // Brand Name validations
        if (name.trim() === "") {
          displayErrorMessage("name-error", "Brand name cannot be empty");
          isValid = false;
        } else if (/^\s*$/.test(name)) {
          displayErrorMessage(
            "name-error",
            "Brand name cannot contain only spaces"
          );
          isValid = false;
        } else if (/^\d+$/.test(name.trim())) {
          displayErrorMessage(
            "name-error",
            "Brand name cannot contain only numbers"
          );
          isValid = false;
        } else if (name.trim().length < 3) {
          displayErrorMessage(
            "name-error",
            "Brand name must be at least 3 characters long"
          );
          isValid = false;
        }if (existingBrands.includes(brandLower)) {
          displayErrorMessage(
            "name-error",
            "This brand name already exists (case-insensitive)"
          );
          isValid = false;
        }
        

        // Brand Image validations
        if (image.files.length === 0) {
          displayErrorMessage("image-error", "Please select an image file");
          isValid = false;
        } else {
          const file = image.files[0];
          const allowedTypes = [
            "image/jpeg",
            "image/jpg",
            "image/png",
            "image/gif",
          ];
          const maxSize = 5 * 1024 * 1024; // 5MB in bytes

          if (!allowedTypes.includes(file.type)) {
            displayErrorMessage(
              "image-error",
              "Only JPG, JPEG, PNG, or GIF files are allowed"
            );
            isValid = false;
          }

          if (file.size > maxSize) {
            displayErrorMessage(
              "image-error",
              "Image file size must not exceed 5MB"
            );
            isValid = false;
          }
        }

        if (isValid) {
          event.target.submit(); // Submit form if valid
        }
        return isValid;
      }

      function displayErrorMessage(elementId, message) {
        const errorElement = document.getElementById(elementId);
        errorElement.innerText = message;
        errorElement.style.display = "block";
      }

      function clearErrorMessages() {
        const errorElements = document.getElementsByClassName("error-message");
        Array.from(errorElements).forEach((element) => {
          element.innerText = "";
          element.style.display = "none";
        });
      }

      function confirmDelete() {
        return confirm("Are you sure you want to delete this brand?");
      }
    </script>
  </body>
</html>
