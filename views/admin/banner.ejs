<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin-style.css">
    <link rel="stylesheet" href="/css/banner.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


</head>
<body>

    <%- include('../partials/admin/header') %>

    <!-- Main Content Area START -->
    <div class="main-content">
        <div class="content-header row">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="content-title card-title ban">Banners</h2>
            </div>
        </div>

        <div class="right mt-5 table-section">
            <table class="table table-striped custom-table">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Active</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <%if(locals.data){%>
                        <%for(let i=0;i<data.length;i++){%>
                    <tr>
                        <td><img src="/uploads/re-image/<%=data[i].image%>" style="height: 2rem; width: 3rem;" class="img-xs" alt="Item"></td>
                        <td><%=data[i].title%></td>
                        <td><%=data[i].description%></td>
                        <td>
                            <%if(data[i].startDate < Date.now() && data[i].endDate > Date.now()){%>
                            <p class="badge rounded-pill alert-success">Active</p>
                            <%}else{%>
                            <p class="badge rounded-pill alert-danger">No Active</p>
                            <%}%>
                        </td>
                        <td class="action" data-title="Remove"><a href="/admin/deleteBanner?id=<%=data[i]._id %>"><i class="icon material-icons md-delete" style="color:rgb(157, 92, 92);">delete</i></a></td>
                    </tr>
                    <%}%>
                    <%}else{%>
                        No banner found
                        <%}%>
                </tbody>
            </table>
        </div>

        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <a href="/admin/addBanner">
                        <button class="btn btn-primary mt-3" type="submit">Add Banner</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Content Area END -->

</body>
</html>
