<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Verification</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f4f4f4;
      }
      .otp-container {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
      }
      input {
        font-size: 20px;
        text-align: center;
        padding: 10px;
        margin: 5px;
        width: 50px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .timer {
        margin-top: 10px;
        color: red;
      }
      button {
        margin-top: 10px;
        padding: 10px;
        border: none;
        background: blue;
        color: white;
        cursor: pointer;
        border-radius: 5px;
      }
      button:disabled {
        background: gray;
      }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <div class="otp-container">
      <h2>Enter OTP</h2>
      <form
        id="otpForm"
        action="/user/verify-otp"
        method="post"
        onsubmit="validateOtpForm()"
      >
        <div>
          <input type="text" maxlength="1" name="otp1" class="otp" required />
          <input type="text" maxlength="1" name="otp2" class="otp" required />
          <input type="text" maxlength="1" name="otp3" class="otp" required />
          <input type="text" maxlength="1" name="otp4" class="otp" required />
          <input type="text" maxlength="1" name="otp5" class="otp" required />
          <input type="text" maxlength="1" name="otp6" class="otp" required />
        </div>
        <p class="timer">Time left: <span id="countdown">60</span> seconds</p>
        <button type="submit">Verify OTP</button>
      </form>
      <button type="submit"  id="resendBtn" disabled>Resend OTP</button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      
      let timeLeft = 60;
      let timer;

      function startTimer() {
        timeLeft = 60; // Reset timer
        document.getElementById("countdown").innerText = timeLeft;
        document.getElementById("resendBtn").disabled = true; // Disable resend button

        clearInterval(timer); // Clear any existing timer
        timer = setInterval(() => {
          if (timeLeft > 0) {
            timeLeft--;
            document.getElementById("countdown").innerText = timeLeft;
          } else {
            clearInterval(timer);
            document.getElementById("resendBtn").disabled = false; // Enable resend button
          }
        }, 1000);
      }

      // Start the timer when the page loads
      startTimer();

      // Resend OTP functionality
      document
        .getElementById("resendBtn")
        .addEventListener("click", function () {
          this.disabled = true; // Disable button immediately
          startTimer(); // Restart the timer

          // Make an AJAX request to resend OTP (Replace with actual backend API)
          fetch("/resend-otp", { method: "POST" })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
    Swal.fire({
        icon: 'success',
        title: 'OTP Sent!',
        text: 'A new OTP has been sent to your registered number.',
        confirmButtonColor: '#3085d6',
    });
    console.log("New OTP:", data.otp); // Debugging purpose
} else {
    Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Failed to resend OTP. Please try again.',
        confirmButtonColor: '#d33',
    });
}

            })
            .catch((error) => console.error("Error resending OTP:", error));
        });

   

    function validateOtpForm() {
    let otpInput = "";
    document.querySelectorAll(".otp").forEach(input => {
        otpInput += input.value;
    });
    
    $.ajax({
        type: "POST",
        url: "/verify-otp", // Make sure this matches your route
        data: { otp: otpInput },
        success: function(response) {
            if (response.success) {
                Swal.fire({
                    icon: "success",
                    title: "OTP verified successfully",
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = response.redirectUrl || "/";
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: response.message || "Invalid OTP"
                });
            }
        },
        error: function(xhr) {
            Swal.fire({
                icon: "error",
                title: "Invalid OTP",
                text: xhr.responseJSON?.message || "Please try again"
            });
        }
    });
    
    return false;
}

      document
        .getElementById("otpForm")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Prevent normal form submission
          validateOtpForm();
        });
    </script>
  </body>
</html>
