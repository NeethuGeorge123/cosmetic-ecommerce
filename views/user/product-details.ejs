    <script>
        $(document).ready(function(){
            // Initialize product slider
            $('.product-image-slider').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: true,
                fade: true,
                asNavFor: '.slider-nav-thumbnails',
                responsive: [
                    {
                        breakpoint: 768,
                        settings: {
                            arrows: false,
                        }
                    }
                ]
            });
            
            // Initialize thumbnail navigation
            $('.slider-nav-thumbnails').slick({
                slidesToShow: 4,
                slidesToScroll: 1,
                asNavFor: '.product-image-slider',
                dots: false,
                focusOnSelect: true,
                prevArrow: '<button type="button" class="slick-prev"><i class="fas fa-chevron-left"></i></button>',
                nextArrow: '<button type="button" class="slick-next"><i class="fas fa-chevron-right"></i></button>',
                responsive: [
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 4,
                        }
                    },
                    {
                        breakpoint: 576,
                        settings: {
                            slidesToShow: 3,
                        }
                    }
                ]
            });
            
            // Initialize Elevate Zoom
            function initZoom() {
                if ($(window).width() > 767) {
                    $('.zoom-img').elevateZoom({
                        zoomType: "inner",
                        cursor: "crosshair",
                        zoomWindowFadeIn: 500,
                        zoomWindowFadeOut: 750
                    });
                } else {
                    $('.zoom-img').elevateZoom({
                        zoomType: "inner",
                        cursor: "crosshair",
                        zoomWindowFadeIn: 500,
                        zoomWindowFadeOut: 750
                    });
                }
            }
            
            // Initialize zoom on page load
            initZoom();
            
            // Reinitialize zoom on window resize
            $(window).resize(function() {
                $('.zoomContainer').remove();
                initZoom();
            });
            
            // Reinitialize zoom when slider changes
            $('.product-image-slider').on('afterChange', function(event, slick, currentSlide) {
                $('.zoomContainer').remove();
                setTimeout(function() {
                    $('.zoom-img').elevateZoom({
                        zoomType: "inner",
                        cursor: "crosshair",
                        zoomWindowFadeIn: 500,
                        zoomWindowFadeOut: 750
                    });
                }, 100);
            });
            
            // Quantity buttons
            $('.qty-up').on('click', function(e) {
                e.preventDefault();
                var qtyVal = parseInt($('#quantity').text());
                $('#quantity').text(qtyVal + 1);
            });
            
            $('.qty-down').on('click', function(e) {
                e.preventDefault();
                var qtyVal = parseInt($('#quantity').text());
                if (qtyVal > 1) {
                    $('#quantity').text(qtyVal - 1);
                }
            });
            
            // Add to cart button effect
            
        });


        function addToWishlist(productId){
        $.ajax({
            url:'/addToWishlist',
            method:'POST',
            data:{productId:productId},
            success:(response)=>{
                if(response.status){
                    Swal.fire({
                        title:'Added to wishlist',
                        text:'The product has been added to your wishlist',
                        icon:'success',
                        timer:2000
                    });
                }else{
                    Swal.fire({
                        title:'Warning',
                        text:response.message,
                        icon:'warning',
                        timer:2000,
                        

                    })
                }
            },
            error:(error)=>{
                Swal.fire({
                    title:'Error',
                    text:'There was an error adding the product to your wishlist',
                    icon:'error',
                    timer:2000,
                })
            }
        })
    }




    function addToCart(productId){
        $.ajax({
            url:'/cart',
            method:'POST',
            data:{productId:productId},
            success:(response)=>{
                if(response.status){
                    Swal.fire({
                        title:'Added to cart',
                        text:'The product has been added to your cart',
                        icon:'success',
                        timer:2000
                    });
                }else{
                    Swal.fire({
                        title:'Already in cart',
                        text:response.message,
                        icon:'info',
                        timer:2000,

                    })
                }
            },
            error:(error)=>{
               
                Swal.fire({
                    title:'Error',
                    text:'There was an error adding the product to your cart',
                    icon:'error',
                    timer:2000,
                })
            }
        })
    }





    </script>
